
@{
     @model List<WebBanHang.Models.Product>
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_Admin.cshtml";
}

 
@section scriptcss
{
    <!-- CSS author LTN -->
    <link href="/Content/Admin/dist/css/style_.css" rel="stylesheet">
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách hàng hóa</h1>
    </div>

    <div class="col-lg-12">

        <div class="col-xs-12 " style="min-width: 500px">

        </div>



       @{ var i = 0;}
        @foreach (var item in Model)
        {
            i++;
            <div class="panel panel-default">
                <div class="panel-body">
                    <div style="display:table;  width:100%">
                        <div style="display:table-row">
                            <div style="display:table-cell">
                                <p style="display:table-cell">
                                    STT: @i
                                </p>
                                <p style="display:table-cell">
                                    MaSP:@item.Id
                                </p>
                                <p style="display:table-cell">
                                    Tên :@item.Name
                                </p>
                                <p style="display:table-cell">
                                    Số lượng trong kho :@item.QuantityAvailable
                                </p>
                                <p style="display:table-cell">
                                    Giá:@item.Price
                                </p>
                                <p style="display:table-cell">
                                    hiển thị top:@item.IsTop
                                </p>
                                <p style="display:table-cell">
                                    Loại SP:@item.Category
                                </p>

                            </div>
                            <div style="display:table-cell">
                                <a href="#">Xóa</a>
                                <a href="/EditProduct/?id=@item.Id">Sửa</a>
                                <a href="#">Chi Tiết</a>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }



    </div>








</div>



