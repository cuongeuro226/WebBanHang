@model IEnumerable<WebBanHang.Models.Order>

@{
    var stt = 0;
    Layout = "~/Areas/Admin/Views/Shared/_layout_Admin.cshtml";
}
@section Title{
    
    <title>Danh sách phiếu đặt hàng</title>
    }

 
@Html.ValidationSummary(true, "",new{  @class = "alert alert-danger" })
<h4>Danh sách phiếu đặt hàng</h4>
<hr />
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SumCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.deliverred)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comfirmed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.deteled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            stt++;
    <tr>
        <td>
            @stt
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SumCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.deliverred)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comfirmed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.deteled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <a href="/Admin/DetailOrder?id=@item.Id">Chi Tiết</a>
              
        </td>
    </tr>
        }
    }
</table>
